{
    "name": "silverstripe/raygun",
    "type": "silverstripe-vendormodule",
    "description": "Raygun integration for SilverStripe",
    "homepage": "https://github.com/silverstripe/silverstripe-raygun",
    "license": "BSD-3-Clause",
    "keywords": ["silverstripe", "raygun", "logging"],
    "authors": [
        {
            "name": "Sam Minnee",
            "homepage": "http://github.com/sminnee"
        }
    ],
    "require": {
        "php": "^8.1",
        "mindscape/raygun4php": "^2",
        "silverstripe/framework": "^5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "SilverStripe\\Raygun\\": "src/",
            "SilverStripe\\Raygun\\Test\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true
        }
    },

    "scripts": {
        "test-phpunit": "phpunit -d memory_limit=512M -d flush=1"
    }
}
